<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Date TextView, shown at the top -->
    <TextView
        android:id="@+id/reportDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- TableLayout to show user data -->
    <TableLayout
        android:id="@+id/reportTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:background="#FFFFFF">

        <!-- Table header row -->
        <TableRow>
            <TextView
                android:text="Name"
                android:padding="8dp"
                android:textStyle="bold"
                android:background="@drawable/table_cell_border" />
            <TextView
                android:text="Email"
                android:padding="8dp"
                android:textStyle="bold"
                android:background="@drawable/table_cell_border" />
            <TextView
                android:text="Blood Glucose (mg/dL)"
                android:padding="8dp"
                android:textStyle="bold"
                android:background="@drawable/table_cell_border" />
            <TextView
                android:text="Medication"
                android:padding="8dp"
                android:textStyle="bold"
                android:background="@drawable/table_cell_border" />
        </TableRow>

        <!-- Dynamic rows will be added programmatically -->

    </TableLayout>

</LinearLayout>
