<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Set the solid color of the circle -->
    <solid android:color="@android:color/white"/> <!-- Replace with your desired color -->

    <!-- Optional: Set a stroke (border) around the circle -->
    <stroke
        android:width="2dp"
        android:color="@android:color/darker_gray"/> <!-- Change to your desired border color -->

    <!-- Optional: Set padding to make it a little larger -->
    <padding
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp"/>
</shape>
