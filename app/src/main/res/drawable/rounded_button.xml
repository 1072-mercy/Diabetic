<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the button -->
    <solid android:color="#FF6200EE" /> <!-- Purple color -->

    <!-- Rounded corners for the button -->
    <corners android:radius="12dp" />

    <!-- Border (stroke) for the button -->
    <stroke
        android:width="1dp"
        android:color="#000000" /> <!-- 1px black border -->

    <!-- Padding inside the button (optional) -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />
</shape>
