<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/blue_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="16dp">

            <Button
                android:id="@+id/buttonFoodChart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/baseline_food_bank_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chart by Food" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="16dp">

            <Button
                android:id="@+id/buttonMedicationChart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/baseline_medical_information_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chart by Medication" />
        </LinearLayout>
    </LinearLayout>

    <!-- Spinner for risk level selection -->
    <Spinner
        android:id="@+id/spinnerRiskLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <!-- New EditText for comments -->
    <EditText
        android:id="@+id/editTextComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter comment here"
        android:padding="16dp"
        android:layout_marginTop="16dp" />

    <!-- New Button to save comment -->
    <Button
        android:id="@+id/buttonSaveComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Comment"
        android:layout_marginTop="16dp" />
</LinearLayout>
